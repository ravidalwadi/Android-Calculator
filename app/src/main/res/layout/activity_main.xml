<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:orientation="vertical"
        android:weightSum="100"
        tools:ignore="MissingConstraints"/>

    <LinearLayout
        android:layout_width="420dp"
        android:layout_height="520dp"
        android:layout_weight="60"
        android:orientation="vertical"
        android:paddingTop="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/btn_clear"
                style="@style/blackButtons"
                android:text="@string/c" />

            <Button
                android:id="@+id/btn_clear_display"
                style="@style/blackButtons"
                android:text="@string/ce" />

            <Button
                android:id="@+id/btn_negative"
                style="@style/blackButtons"
                android:text="@string/negativeOrPositive" />

            <Button
                android:id="@+id/btn_delete"
                style="@style/blackButtons"
                android:contentDescription="@string/delete"
                app:icon="@drawable/ic_delete"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="35dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/btn_1"
                style="@style/whiteButtons"
                android:text="@string/one" />

            <Button
                android:id="@+id/btn_2"
                style="@style/whiteButtons"
                android:text="@string/two" />

            <Button
                android:id="@+id/btn_3"
                style="@style/whiteButtons"
                android:text="@string/three" />

            <Button
                android:id="@+id/btn_division"
                style="@style/blackButtons"
                android:contentDescription="@string/division"
                app:icon="@drawable/ic_division"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="25dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/btn_4"
                style="@style/whiteButtons"
                android:text="@string/four" />

            <Button
                android:id="@+id/btn_5"
                style="@style/whiteButtons"
                android:text="@string/five" />

            <Button
                android:id="@+id/btn_6"
                style="@style/whiteButtons"
                android:text="@string/six" />

            <Button
                android:id="@+id/btn_multiplication"
                style="@style/blackButtons"
                android:text="@string/multiplication" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/btn_7"
                style="@style/whiteButtons"
                android:text="@string/seven" />

            <Button
                android:id="@+id/btn_8"
                style="@style/whiteButtons"
                android:text="@string/eight" />

            <Button
                android:id="@+id/btn_9"
                style="@style/whiteButtons"
                android:text="@string/nine" />

            <Button
                android:id="@+id/btn_submission"
                style="@style/blackButtons"
                android:text="@string/subtraction" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/btn_0"
                style="@style/whiteButtons"
                android:text="@string/zero" />

            <Button
                android:id="@+id/btn_dot"
                style="@style/whiteButtons"
                android:contentDescription="@string/dot"
                app:icon="@drawable/ic_dot"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="15dp"
                app:iconTint="#000000" />

            <Button
                android:id="@+id/btn_equal"
                style="@style/blackButtons"
                android:text="@string/equal" />

            <Button
                android:id="@+id/btn_sum"
                style="@style/blackButtons"
                android:text="@string/sum" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/display"
        android:layout_width="394dp"
        android:layout_height="wrap_content"
        android:layout_weight="40"
        android:fontFamily="@font/montserrat_alternates_regular"
        android:gravity="bottom|end"
        android:padding="5dp"
        android:text="@string/zero"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="123dp" />

</androidx.constraintlayout.widget.ConstraintLayout>